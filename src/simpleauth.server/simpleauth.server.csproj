<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>SimpleAuth Server</Description>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>simpleauth.server</AssemblyName>
    <PackageId>simpleauth.server</PackageId>
    <RootNamespace>SimpleAuth.Server</RootNamespace>
  </PropertyGroup>
  <Import Project="../../shared.proj" />

  <ItemGroup>
    <None Update="**.user;**.vspscc;node_modules\**\*;bower_components">
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="Views\**\*.html" />
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="Views\**\*.cshtml" />
    <None Remove="wwwroot\**\*.css" />
    <None Remove="wwwroot\**\*.js" />
    <None Remove="wwwroot\**\*.png" />
    <None Remove="wwwroot\**\*.ico" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Views\**\*.cshtml" />
    <EmbeddedResource Include="wwwroot\**\*.css" />
    <EmbeddedResource Include="wwwroot\**\*.js" />
    <EmbeddedResource Include="wwwroot\**\*.png" />
    <EmbeddedResource Include="wwwroot\**\*.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Identity" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Cors" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\simpleauth\simpleauth.csproj" />
  </ItemGroup>

</Project>
