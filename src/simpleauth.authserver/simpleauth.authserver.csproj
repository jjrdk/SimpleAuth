<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <AssemblyName>simpleauth.authserver</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>simpleauth.authserver</PackageId>
    <StartupObject>SimpleAuth.AuthServer.Program</StartupObject>
    <RootNamespace>SimpleAuth.AuthServer</RootNamespace>
    <UserSecretsId>simpleauth-authserver</UserSecretsId>
  </PropertyGroup>
  <Import Project="..\..\shared.proj" />

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Google" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="3.1.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\simpleauth.resourceserver\simpleauth.resourceserver.csproj" />
    <ProjectReference Include="..\simpleauth.stores.marten\simpleauth.stores.marten.csproj" />
    <ProjectReference Include="..\simpleauth\simpleauth.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\tests\mycert.pfx" Link="mycert.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
