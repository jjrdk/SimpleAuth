<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <AssemblyName>simpleauth.authserver</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>simpleauth.authserver</PackageId>
    <StartupObject>SimpleAuth.AuthServer.Program</StartupObject>
    <RootNamespace>SimpleAuth.AuthServer</RootNamespace>
    <UserSecretsId>simpleauth-authserver</UserSecretsId>
  </PropertyGroup>
  <Import Project="..\..\shared.proj" />

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Google" Version="3.0.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\simpleauth.stores.marten\simpleauth.stores.marten.csproj" />
    <ProjectReference Include="..\simpleauth\simpleauth.csproj" />
    <ProjectReference Include="..\simpleauth.sms\simpleauth.sms.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\tests\mycert.pfx" Link="mycert.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ProjectExtensions>
    <VisualStudio>
      <UserProperties Properties_4launchSettings_1json__JSONSchema="http://json.schemastore.org/phraseapp" />
    </VisualStudio>
  </ProjectExtensions>

</Project>
