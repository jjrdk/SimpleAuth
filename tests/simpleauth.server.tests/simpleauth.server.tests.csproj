<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>SimpleIdentityServer.Host.Tests Integration test project</Description>
    <Authors>thierry habart</Authors>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AssemblyName>simpleauth.server.tests</AssemblyName>
    <PackageId>SimpleIdentityServer.Host.Tests</PackageId>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <SignAssembly>false</SignAssembly>
    <AssemblyOriginatorKeyFile>testCert.pfx</AssemblyOriginatorKeyFile>
    <RootNamespace>SimpleAuth.Server.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\testCert.pfx" Link="testCert.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\mycert.pfx" Link="mycert.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json;testCert.pfx;mycert.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\simpleauth.twilio\simpleauth.twilio.csproj" />
    <ProjectReference Include="..\..\src\simpleauth.server\simpleauth.server.csproj" />
    <ProjectReference Include="..\..\src\simpleauth.twilio.client\simpleauth.twilio.client.csproj" />
    <ProjectReference Include="..\..\src\simpleauth.client\simpleauth.client.csproj" />
    <ProjectReference Include="..\..\src\simpleauth.uma\simpleauth.uma.csproj" />
    <ProjectReference Include="..\..\src\SimpleIdentityServer.Manager.Client\simpleauth.manager.client.csproj" />
    <ProjectReference Include="..\..\src\SimpleIdentityServer.UserInfoIntrospection\simpleauth.userinfointrospection.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.9.0" />
    <PackageReference Include="Moq" Version="4.10.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.TestHost" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Services\" />
  </ItemGroup>

</Project>
