# Build runtime image
FROM mcr.microsoft.com/dotnet/nightly/runtime-deps:5.0-alpine
ENV ACCEPT_EULA=Y
COPY artifacts/publish/inmemory/ app/
WORKDIR /app
COPY artifacts/publish/inmemory/ .
ENV ACCEPT_EULA=Y
ENV DOTNET_CLI_TELEMETRY_OPTOUT=1
ENV DOTNET_NOLOGO=true
ENTRYPOINT ["./simpleauth.authserver"]
